{
  "name": "amee",
  "version": "1.0.0",
  "description": "Simple and stateless library for managing sessions with JWT.",
  "keywords": [
    "jwt",
    "session",
    "stateless",
    "cookie",
    "encryption"
  ],
  "license": "MIT",
  "author": "Zoheir Benghalem <kayuxx@tutanota.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayuxx/amee"
  },
  "bugs": "https://github.com/kayuxx/amee/issues",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "files": ["dist/*"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js",
      "require": "./dist/providers/index.cjs",
      "default": "./dist/providers/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit && eslint",
    "prepare": "tsup && tsc --noEmit",
    "test": "vitest"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "trailingComma": "all"
  },
  "dependencies": {
    "@panva/hkdf": "^1.2.1",
    "jose": "^5.6.3"
  },
  "devDependencies": {
    "@types/cookie": "0.6.0",
    "@types/node": "20.14.12",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.1",
    "tsup": "8.2.3",
    "typescript": "5.5.4",
    "vitest": "^2.0.5"
  }
}
